<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
			
			<!-- CSS Bootstrap -->
			<link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
			
        {% endblock %}
    </head>
    <body>
    	{% block header %}

    		<!-- Menu dynamique -->
	        <header>
	        	<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
			        <div class="collapse navbar-collapse">
			            <ul class="navbar-nav mr-auto">
			                {% for lien in liens %}
			                    <li class="nav-item">
			                    	{% if lien.subLink == false %}
			                        	<a class="nav-link" href="{{ path(lien.path) }}">{{ lien.name|capitalize }}</a>
			                        {% endif %}
			                        	<ul class="navbar-nav mr-auto">
					                        {% if lien.subLink == true %}
						                        <li class="nav-item">
						                        	<a class="nav-link" href="{{ path(lien.path) }}">{{ lien.name|capitalize }}</a>
						                        </li>
					                        {% endif %}
			                        	</ul>
			                    </li>
			                {% endfor %}
			            </ul>
			        </div>
			    </nav>
	        </header>

        {% endblock %}

        <br/>

        {% block body %}{% endblock %}

       	<br/><br/>

       	<!-- Essai menu normal fonctionnel -->
		<h6>--> Modèle menu dynamque (menu normal)</h6>
    	<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
			<div class="collapse navbar-collapse">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" href="{{ path('article_index') }}">Article</a>
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('article_new') }}">Créer un article</a>
							</li>
						</ul>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('category_index') }}">Catégorie</a>
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('category_new') }}">Créer une catégorie</a>
							</li>
						</ul>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('liens') }}">Liste des liens</a>
					</li>
				</ul>
			</div>
    	</nav>

        {% block javascripts %}
		
			<!-- JS Bootstrap -->
			<script src="{{ asset('assets/assets/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"/></script>
			
			<!-- JQuery -->
			<script src="{{ asset('assets/jquery/jquery.min.js') }}" type="text/javascript"/></script>
			
        {% endblock %}
    </body>
</html>
